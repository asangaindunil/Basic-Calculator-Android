<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn8"
        android:text="9" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn9"
        android:text="/" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/btn7"
        android:layout_below="@+id/btn7"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn8"
        android:text="6" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn9"
        android:text="*" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/btn7"
        android:layout_below="@+id/btn4"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn7"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn8"
        android:text="3" />

    <Button
        android:id="@+id/btnre"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn9"
        android:text="-" />

    <Button
        android:id="@+id/btnclr"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/btn7"
        android:layout_below="@+id/btn1"
        android:text="CLR" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn1"
        android:layout_toEndOf="@+id/btn7"
        android:text="0" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn1"
        android:layout_toEndOf="@+id/btn8"
        android:text="=" />

    <Button
        android:id="@+id/btnad"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn1"
        android:layout_toEndOf="@+id/btn9"
        android:text="+" />

    <TextView
        android:id="@+id/calresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btndiv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:text="Result"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/calcontrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/calresult"
        android:layout_marginTop="135dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />
</RelativeLayout>